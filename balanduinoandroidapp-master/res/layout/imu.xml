<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BalanduinoActivity">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pitch" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roll" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowCoefficient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coefficient" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_alignLeft="@id/table"
        android:layout_alignRight="@id/table"
        android:layout_below="@id/table"
        android:text="@string/button" />
    <Button
        android:id="@+id/button_machine_gun"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/table"
        android:layout_height= "wrap_content"
        android:layout_below="@id/button"

        android:text="Machine Gun" />
    <Button
        android:id="@+id/button_yahoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/button"
        android:layout_toRightOf="@+id/button_machine_gun"

        android:text="Yahoo" />
    <Button
        android:id="@+id/button_eat_cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/table"
        android:layout_below="@id/button"
        android:layout_toRightOf="@+id/button_yahoo"

        android:text="Eat cake" />
    <Button
        android:id="@+id/button_japanshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/table"
        android:layout_below="@id/button_machine_gun"
        android:text="Japan show" />
    <Button
        android:id="@+id/button_disagree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_japanshow"
        android:layout_below="@id/button_machine_gun"
        android:text="Disagree" />
    <Button
        android:id="@+id/button_hate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_disagree"
        android:layout_below="@id/button_machine_gun"
        android:text="I hate you" />

</RelativeLayout>